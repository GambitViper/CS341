@model Dentask.ViewModels.RandomAppointmentViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*
    This is a comment
    on multiple lines
*@

@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<h2 class="@className">@Model.Appointment.Name</h2>

@if (Model.Customers.Count == 0)
{
    <text>No one has scheduled this appointment.</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}

